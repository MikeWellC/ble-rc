<UserControl x:Class="SmartRacer.Shared.ThumbStick"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="300" d:DesignWidth="300">

    <Grid x:Name="LayoutRoot" Background="#00FF0000">
        <Ellipse HorizontalAlignment="Center" Height="300" Stroke="{StaticResource PhoneBorderBrush}" VerticalAlignment="Center" Width="300" StrokeThickness="10" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <CompositeTransform/>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="dll" Height="150" Stroke="{StaticResource PhoneBorderBrush}" StrokeThickness="10" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Fill="{StaticResource PhoneBorderBrush}" />
    </Grid>
</UserControl>