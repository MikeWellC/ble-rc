<UserControl x:Class="SmartRacerShared.ThumbStick"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   
    
    Foreground="{StaticResource RepeatButtonBorderThemeBrush}"
    d:DesignHeight="300" d:DesignWidth="300">

    <Grid x:Name="LayoutRoot" Background="#00FF0000" PointerPressed="LayoutRoot_PointerPressed" PointerMoved="LayoutRoot_PointerMoved" PointerReleased="LayoutRoot_PointerReleased" ManipulationDelta="LayoutRoot_ManipulationDelta" ManipulationCompleted="LayoutRoot_ManipulationCompleted" ManipulationMode="All">
        <Ellipse HorizontalAlignment="Center" Height="300" Stroke="White" VerticalAlignment="Center" Width="300" StrokeThickness="10" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <CompositeTransform/>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="dll" Height="150" Stroke="White" StrokeThickness="10" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Fill="#FFEEEEEE" />
    </Grid>
</UserControl>